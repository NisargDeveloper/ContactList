<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Edit text to enter contact name-->
    <EditText
        android:id="@+id/idEdtName"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:background="@color/teal_200"
        android:fontFamily="monospace"
        android:hint="Enter Name" />

    <!--edit text to enter phone number-->
    <EditText
        android:id="@+id/idEdtphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_margin="10dp"
        android:background="@color/teal_200"
        android:fontFamily="monospace"
        android:hint="Enter Phone Number" />

    <!--edit text to display Email-->
    <EditText
        android:id="@+id/idEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:background="@color/teal_200"
        android:fontFamily="monospace"
        android:hint="Enter Email" />

    <!--edit text for Address-->
    <EditText
        android:id="@+id/idEdtAddress"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:background="@color/teal_200"
        android:fontFamily="monospace"
        android:hint="Enter Address" />

    <!--button for adding new contact-->
    <Button
        android:id="@+id/idBtnAddContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Contact"
        android:fontFamily="monospace"
        android:textAllCaps="false" />

    <!--new button for reading contacts-->
    <Button
        android:id="@+id/idBtnReadContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Read All Contacts"
        android:fontFamily="monospace"
        android:textAllCaps="false" />

    <!--new button for searching contacts-->
    <Button
        android:id="@+id/idBtnSearchContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Search Contact"
        android:fontFamily="monospace"
        android:textAllCaps="false" />
</LinearLayout>
